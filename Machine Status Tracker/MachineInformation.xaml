<UserControl x:Class="Machine_Status_Tracker.MachineInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Machine_Status_Tracker"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <Grid Margin="10">
        <materialDesign:Card x:Name="Card" UniformCornerRadius="8" Padding="16" Background="Green" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <StackPanel x:Name="InfoSp" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label x:Name="NameLabel" Content="Name: " FontWeight="Bold" FontSize="22" VerticalContentAlignment="Stretch"/>
                <Label x:Name="DescriptionLabel" Content="Description: " FontSize="22" VerticalContentAlignment="Stretch"/>
                <Label x:Name="StatusLabel" Content="Status: " FontSize="22" VerticalContentAlignment="Stretch"/>
                <Label x:Name="NotesLabel" Content="Notes: " FontSize="22" VerticalContentAlignment="Stretch"/>
                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="42">
                    <!--<Button x:Name="EditBt" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Click="EditBt_Click">
                        <materialDesign:PackIcon Kind="Edit" Foreground="#FF9DBDB6" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="40" Height="25"/>
                    </Button>-->
                    <Button x:Name="DeleteBt" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Click="DeleteBt_Click">
                        <materialDesign:PackIcon Kind="Delete" Foreground="#FF9DBDB6" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="50" Height="38"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
